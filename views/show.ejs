<% include partials/header %>

<div id="show-header">
        <h3 class="text-center">Enter The Movie You Want To Search</h3>
        <form id="searchForm" action="/show_movies" method="GET">
           <input class="form-control" type="text" name="search" placeholder="Search Movies">
       </form>
   </div>

<div class="container">
    <div id="movies" class="row">      
        <% movieData["Search"].forEach(function(movie){ %>
            <div class="col-md-3">
                <div class="well text-center">
                    <img src="<%= movie["Poster"] %>" alt="image not found">
                    <h5><%= movie["Title"] %></h5>
                    <a class="btn btn-primary" href="/show/<%=movie["imdbID"]%>">More Details</a>
                 </div>
            </div>
        <%  }) %>
    </div>
</div>    

<button class="btn btn-primary"><a href="/">Go Back</a></button>


<% include partials/footer %>